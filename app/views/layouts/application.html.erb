<!DOCTYPE html>
<html>
<head>
  <title>TweetsRails</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body class="tweets">
  <div class="outBox">
    <div class="menu">
      <a class='header' href='#'>&nbsp;</a>
      <ul>
        <li><%= link_to({ :controller => "tweets", :action => "index" }, 
              :class => (controller_name == 'tweets') ? 'selected' : nil) do %>
              我的推<span>My Tweets</span>
            <% end %>
        </li>
        <li><%= link_to ({ :controller => "favorites", :action => "index" },
              :class => (controller_name == 'favorites') ? 'selected' : nil) do %>
              收藏的推<span>Favorites</span>
            <% end %>
        </li>
      </ul>
    </div>

<%= yield %>

  </div>
</body>
</html>