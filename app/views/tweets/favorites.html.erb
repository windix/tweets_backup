<%= paginate @tweets %>

<% last_post_date = nil %>
<% @tweets.reverse.each do |tweet| %>
    <div class="msg">
      <div class="datetime">
        <p class="date"><%= (tweet.post_date == last_post_date) ? '' : tweet.post_date %></p>
        <p class="time"><%= link_to tweet.post_time, tweet.twitter_perm_url %></p>
      </div>
      <div class="srcTag">&nbsp;</div>
      <div class="content">
        <span class="from"><%= tweet.user_name.html_safe %></span><br />
        <%= auto_link tweet.text %>
      </div>
    </div>
    <% last_post_date = tweet.post_date %>
<% end %>

<%= paginate @tweets %>
